extends layout

block content
  #page-wrapper
    .container-fluid
      .row.bg-title
        .col-lg-3.col-md-4.col-sm-4.col-xs-12
          h4.page-title Basic Table
      .row
        .col-sm-12
          .white-box
            .table-responsive
              table.table
                thead
                  tr
                    th.text-center(scope="col") #
                    th.text-center(scope="col") Product Name
                    th.text-center(scope="col") Category
                    th.text-center(scope="col") Detail
                    th.text-center(scope="col") Description
                    th.text-center(scope="col") dateCreate
                    th.text-center(scope="col") Price
                tbody
                  - for (let i=0; i < listProducts.length; i++)
                    tr
                      td(scope="row")=i+1
                      td=listProducts[i].productName
                      td=listProducts[i].category
                      td
                        - for (let j=0; j < listProducts[i].details.length; j++)
                          ul
                            li=listProducts[i].details[j].color
                            li=listProducts[i].details[j].size
                            li=listProducts[i].details[j].quantity
                      td=listProducts[i].description
                      td=listProducts[i].dateCreate.toLocaleString()
                      td=listProducts[i].price
                    tr