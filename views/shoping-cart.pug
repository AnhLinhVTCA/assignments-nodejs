extends layout

block content
	.container
		.bread-crumb.flex-w.p-l-25.p-r-15.p-t-30.p-lr-0-lg
			a.stext-109.cl8.hov-cl1.trans-04(href='/') Home
				i.fa.fa-angle-right.m-l-9.m-r-10(aria-hidden='true')
			span.stext-109.cl4 Shoping Cart
	form.bg0.p-t-75.p-b-85(method="post" action="/shoping-cart/updateCart")
		.container
			.row
				.col-lg-10.col-xl-7.m-lr-auto.m-b-50
					.m-l-25.m-r--38.m-lr-0-xl
						.wrap-table-shopping-cart
							table.table-shopping-cart
								tr.table_head
									th.column-1 Product
									th.column-2
									th.column-3 Price
									th.column-4 Quantity
									th.column-5 Total
								- for(let i = 0; i < listInfoProductInCart.length; i++)
										tr.table_row
											td.column-1
												.how-itemcart1
													img(src=listInfoProductInCart[i].imagePath[0] alt='IMG' data-id=listProductInCart[i].id)
											td.column-2 #{listInfoProductInCart[i].productName}
											td.column-3 $ #{listInfoProductInCart[i].price}
											td.column-4
												.wrap-num-product.flex-w.m-l-auto.m-r-0
													.btn-num-product-down.cl8.hov-btn3.trans-04.flex-c-m
														i.fs-16.zmdi.zmdi-minus
													input.mtext-104.cl3.txt-center.num-product(type='number' name='quantity' value=listProductInCart[i].quantity)
													.btn-num-product-up.cl8.hov-btn3.trans-04.flex-c-m
														i.fs-16.zmdi.zmdi-plus
													input.d-none(type='hidden' name='id' value=listProductInCart[i].id)
											td.column-5 $ #{(listInfoProductInCart[i].price * listProductInCart[i].quantity)}
						if listInfoProductInCart.length > 0
							.flex-w.flex-sb-m.bor15.p-t-18.p-b-15.p-lr-40.p-lr-15-sm
								.flex-w.flex-m.m-r-20.m-tb-5
									input.stext-104.cl2.plh4.size-117.bor13.p-lr-20.m-r-10.m-tb-5(type='text' name='coupon' placeholder='Coupon Code')
									.flex-c-m.stext-101.cl2.size-118.bg8.bor13.hov-btn3.p-lr-15.trans-04.pointer.m-tb-5
										| Apply coupon
								button.flex-c-m.stext-101.cl2.size-119.bg8.bor13.hov-btn3.p-lr-15.trans-04.pointer.m-tb-10(type="submit")
									| Update Cart
				.col-sm-10.col-lg-7.col-xl-5.m-lr-auto.m-b-50
					.bor10.p-lr-40.p-t-30.p-b-40.m-l-63.m-r-40.m-lr-0-xl.p-lr-15-sm
						h4.mtext-109.cl2.p-b-30
							| Cart Totals
						.flex-w.flex-t.bor12.p-b-13
							.size-208
								span.stext-110.cl2
									| Subtotal:
							.size-209
								span.mtext-110.cl2.total-price
									| $ #{total}
						.flex-w.flex-t.bor12.p-t-15.p-b-30
							.size-208.w-full-ssm
								span.stext-110.cl2
									| Shipping:
							.size-209.p-r-18.p-r-0-sm.w-full-ssm
								p.stext-111.cl6.p-t-2
									| There are no shipping methods available. Please double check your address, or contact us if you need any help.
								.p-t-15
									span.stext-112.cl8
										| Calculate Shipping
									.rs1-select2.rs2-select2.bor8.bg0.m-b-12.m-t-9
										select.js-select2(name='time')
											option Select a country...
											option USA
											option UK
										.dropDownSelect2
									.bor8.bg0.m-b-12
										input.stext-111.cl8.plh3.size-111.p-lr-15(type='text' name='state' placeholder='State /  country')
									.bor8.bg0.m-b-22
										input.stext-111.cl8.plh3.size-111.p-lr-15(type='text' name='postcode' placeholder='Postcode / Zip')
									.flex-w
										.flex-c-m.stext-101.cl2.size-115.bg8.bor13.hov-btn3.p-lr-15.trans-04.pointer
											| Update Totals
						.flex-w.flex-t.p-t-27.p-b-33
							.size-208
								span.mtext-101.cl2
									| Total:
							.size-209.p-t-1
								span.mtext-110.cl2
									| $ #{total}
						button.flex-c-m.stext-101.cl0.size-116.bg3.bor14.hov-btn3.p-lr-15.trans-04.pointer
							| Proceed to Checkout
